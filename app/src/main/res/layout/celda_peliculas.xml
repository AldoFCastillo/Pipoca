    <ImageView
        android:id="@+id/imageViewTrailerCelda"
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:layout_gravity="top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="170dp"
        android:background="#BC000000" />


    <TextView
        android:id="@+id/textViewNombreCelda"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="170dp"
        android:text="NOMBRE PELICULA"
        android:textColor="@color/colorTextoClaro"
        android:textSize="25dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textViewGeneroCelda"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="205dp"
        android:text="GENERO"
        android:textColor="@color/colorTextoClaro"
        android:textSize="15dp"

        android:textStyle="bold" />

    <ImageView

        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginTop="172dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/star" />

    <TextView
        android:id="@+id/textViewPuntajeCelda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="212dp"
        android:layout_marginRight="19dp"
        android:text="9.1"
        android:textColor="@color/colorTextoClaro"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/imageViewDislikeCeldaPelicula"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="27dp"
        android:src="@drawable/ic_favorite_border_white_24dp" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieLikeCeldaPelicula"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="right"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:lottie_autoPlay="false"
        app:lottie_fileName="like.json"
        app:lottie_imageAssetsFolder="assets"/>


</FrameLayout>