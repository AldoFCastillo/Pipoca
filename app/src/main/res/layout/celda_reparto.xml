<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorFondoOscuro"
    android:orientation="horizontal"
    android:layout_marginBottom="5dp">


    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewCeldaRepartoNombrePersonaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="nombre personaje"
            android:textColor="@color/colorTextoClaro"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewCeldaRepartoNombreActor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="nombre actor"
            android:textColor="@color/colorTextoClaro" />

        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/imageViewCeldaRepartoImagenReparto"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#77F0F5F9"></LinearLayout>

</LinearLayout>