<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayoutCeldaSerie"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:elevation="10dp"
        app:cardCornerRadius="25dp"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <!--<com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingButtonSerie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="@color/colorPrimary"
            android:src="@drawable/ic_favorite_border_white_24dp"
            app:fabSize="mini"
            app:layout_anchor="@+id/imageViewPosterCeldaCartelera" />-->

        <ImageView
            android:id="@+id/imageViewTrailerCeldaSeries"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/textViewNombreCeldaSeries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="20dp"
                android:text="NOMBRE SERIE"
                android:textColor="#c9d6df"
                android:textSize="25dp"
                android:background="#8BE23C3C"
                android:textStyle="bold"
                android:layout_above="@+id/textViewGeneroCeldaSeries"/>


            <TextView
                android:id="@+id/textViewGeneroCeldaSeries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text="GENERO"
                android:textColor="#c9d6df"
                android:textSize="15dp"
                android:background="#8BE23C3C"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"/>


        </RelativeLayout>

        <TextView
            android:id="@+id/textViewPuntajeCeldaSeries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="212dp"
            android:layout_marginRight="20dp"
            android:text="9.1"
            android:textColor="#c9d6df"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginTop="172dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/star" />

        <ImageView
            android:id="@+id/imageViewDislike"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginTop="25dp"
            android:layout_marginRight="27dp"
            android:src="@drawable/ic_favorite_border_white_24dp" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieLike"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:lottie_autoPlay="false"
            app:lottie_fileName="like.json"
            app:lottie_imageAssetsFolder="assets"/>



    </androidx.cardview.widget.CardView>

</FrameLayout>