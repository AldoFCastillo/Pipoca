<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFondoOscuro"
    android:orientation="vertical"
    tools:context=".view.fragment.DetallePeopleFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewFotoPeople"
                    android:layout_width="150dp"
                    android:layout_height="250dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewNombrePeople"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Nombre Persona"
                        android:textColor="@color/colorTextoClaro"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewTrabajoPeople"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Actor"
                        android:textColor="@color/colorTextoClaro"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FECHA DE NACIMIENTO:"
                        android:textColor="@color/colorTextoClaro" />

                    <TextView
                        android:id="@+id/textViewFechaDeNacimientoPeople"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2000"
                        android:textColor="@color/colorTextoClaro" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FECHA DE DECESO:"
                        android:textColor="@color/colorTextoClaro" />

                    <TextView
                        android:id="@+id/textViewFechaDeMuertePeople"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2000"
                        android:textColor="@color/colorTextoClaro" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LUGAR DE NACIMIENTO:"
                        android:textColor="@color/colorTextoClaro" />

                    <TextView
                        android:id="@+id/textViewLugarDeNacimientoPeople"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Usa"
                        android:textColor="@color/colorTextoClaro" />


                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="BIOGRAFIA:"
                android:textColor="@color/colorTextoClaro" />

            <TextView
                android:id="@+id/textViewBiografiaPeople"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorTextoClaro" />


        </LinearLayout>
    </ScrollView>
</FrameLayout>